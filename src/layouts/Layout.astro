---
import "@fontsource/alata/400.css";
import "@fontsource/josefin-sans/300.css";
import "@fontsource/josefin-sans/variable.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/loopstudios-landing-page/favicon.svg"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="max-w-screen-lg mx-auto">
    <slot />
  </body>
</html>
